{
  "manifest_version": 2,
  "name": "Rock Music Player",
  "version": "2",
  "permissions": [
    "fileSystem" ,
    {"mediaGalleries": ["read", "allAutoDetected"] }, 
    "storage",
    "http://song4u.sinaapp.com/*",
    "http://ting.baidu.com/*",
    "http://zhangmenshiting.baidu.com/*",
    "http://geci.me/api/lyric/*",
    "http://s.geci.me/lrc/*"
  ],
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "minimum_chrome_version": "23"
}