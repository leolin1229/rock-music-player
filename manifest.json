{
  "manifest_version": 2,
  "name": "Rock Music Player",
  "version": "2",
  "permissions": [
    "notifications",
    "fileSystem" ,
    "storage",
    {"mediaGalleries": ["read", "allAutoDetected"] }, 
    "storage",
    "http://song4u.sinaapp.com/*",
    "http://ting.baidu.com/*",
    "http://zhangmenshiting.baidu.com/*",
    "http://geci.me/api/lyric/*",
    "http://s.geci.me/lrc/*",
    "http://leolin.cc/*",
    "http://rockmusicplayer-jsjs.rhcloud.com/*",
    "http://fm.baidu.com/dev/api/*",
    "http://music.baidu.com/data/music/*",
    "http://mp3.baidu.com/dev/api/*"
  ],
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "minimum_chrome_version": "23",
  "icons": {
    "128": "dist/img/music_player128.png" 
  }
}